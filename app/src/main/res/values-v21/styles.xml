<resources>

    <!-- Base application theme. -->
    <style name="IntroTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme" parent="GWS.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="buttonStyle">@style/MyButton</item>
        <item name="editTextStyle">@style/GWS.EditText</item>
        <item name="searchViewStyle">@style/GWS.SearchViewStyle</item>

        <item name="android:timePickerDialogTheme">@style/Dialog</item>
        <item name="android:datePickerDialogTheme">@style/Dialog</item>
        <item name="android:alertDialogTheme">@style/Dialog</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyButton" parent="GWS.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MySpinnerStyle">
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:drawableRight">@drawable/ic_keyboard_arrow_down_black_24dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:popupBackground">#ffffff</item>
    </style>

    <style name="FAB_MENU">
        <item name="android:background">@drawable/fab_lable_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">8dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
