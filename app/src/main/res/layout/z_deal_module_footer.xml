<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save"
            style="@style/GWS.Button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/save"
            android:textColor="@color/app_color_accent"
            android:visibility="gone" />

        <Button
            android:id="@+id/make_editable"
            style="@style/GWS.AccentButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/edit"
            android:visibility="gone" />

        <Button
            android:id="@+id/complete"
            style="@style/GWS.AccentButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/deal_complete"
            android:visibility="gone" />


        <Button
            android:id="@+id/complete_as"
            style="@style/GWS.AccentButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/deal_complete_as"
            android:visibility="gone" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_complete_draft"
        style="@style/GWS.Silver"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:text="@string/deal_complete_draft"
        android:visibility="gone" />
</LinearLayout>
