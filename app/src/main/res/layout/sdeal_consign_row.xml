<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_payment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_consignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sum"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_total_sum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="@drawable/my_edit_text"
                android:enabled="false"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/consignment"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_consign_all"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight=".1"
                    android:background="@drawable/radius_left_button"
                    android:padding="4dp"
                    android:src="@drawable/ic_add_black_24dp" />

                <EditText
                    android:id="@+id/et_consign_amount"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/my_edit_text"
                    android:gravity="right"
                    android:inputType="numberDecimal" />

                <ImageButton
                    android:id="@+id/btn_consign_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight=".1"
                    android:background="@drawable/radius_right_button"
                    android:padding="4dp"
                    android:src="@drawable/ic_clear_black_24dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/deal_consgn_data"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_consign_date"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    android:background="@drawable/my_edit_text"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/btn_consign_date_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight=".1"
                    android:background="@drawable/radius_right_button"
                    android:padding="4dp"
                    android:src="@drawable/ic_clear_black_24dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:textSize="15dp"
        android:visibility="gone" />
</LinearLayout>