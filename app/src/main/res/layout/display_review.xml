<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <uz.greenwhite.lib.widget.SquareImageView
            android:id="@+id/iv_image"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/display_photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/display_info"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right" />

            <TextView
                android:id="@+id/tv_review_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_dark"
                android:textSize="15sp" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_review_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_color_light"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_display_barcode"
            style="@style/GWS.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/barcode"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_display_photo"
            style="@style/GWS.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/outlet_display_capture_photo"
            android:textSize="14sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="top|left"
        android:hint="@string/note"
        android:lines="4" />

    <uz.greenwhite.lib.widget.SquareImageView
        android:id="@+id/iv_display_photo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</LinearLayout>