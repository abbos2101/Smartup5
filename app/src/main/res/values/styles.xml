<resources>

    <!-- Base application theme. -->
    <style name="IntroTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme" parent="GWS.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="buttonStyle">@style/MyButton</item>
        <item name="editTextStyle">@style/GWS.EditText</item>
        <item name="searchViewStyle">@style/GWS.SearchViewStyle</item>
    </style>

    <style name="MyButton" parent="GWS.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MySpinnerStyle">
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:drawableRight">@drawable/ic_keyboard_arrow_down_black_24dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:popupBackground">#ffffff</item>
    </style>

    <style name="FAB_MENU">
        <item name="android:background">@drawable/fab_lable_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GWS.AccentButton" parent="GWS.Button">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_accent_background</item>
    </style>

    <style name="GWS.PrimaryButton" parent="GWS.Button">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/button_primary_background</item>
    </style>

    <style name="GWS.RedButton2" parent="GWS.Button">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_red_background</item>
    </style>

    <style name="GWS.Silver" parent="GWS.Button">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_silver_background</item>
    </style>

</resources>
